@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form method="post" action="@Url.Action("loginUser","Login")">
                    <!--logo-->
                    <div class="d-flex align-items-center mb-3 pb-1">
                        <img src="~/img/logo.jpeg" style="width: 25%" />
                    </div>

                    <h5 class="fw-bold fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                    <!-- username input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <label class="form-label" for="form1Example13">User Name</label>
                        <input type="text" name="username" class="form-control form-control-lg" required/>
                    </div>

                    <!-- Password input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <label class="form-label" for="form1Example23">Password</label>
                        <input type="password" name="password" class="form-control form-control-lg" required />
                    </div>
                    <div id="passwordError" class="text-danger mb-3">@ViewBag.message</div>
                    @{ViewBag.message=null;}
                    <div class="d-flex justify-content-between mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                            <label class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                        <a href="#!" class="ml-auto">Forgot password?</a>
                    </div>


                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-block fw-bold">Sign In</button>

                </form>
            </div>
        </div>
    </div>
</section>