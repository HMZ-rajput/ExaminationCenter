@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutSidebar.cshtml";
}
@using ExaminationCenter.Models;
@model List<Request>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="text-center">
                <h1 class="display-4">Candidate Page</h1>
                <h3 class="display-5">Hello Mark!</h3>

                <div class="d-flex justify-content-start mb-3">
                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#mymodal">Add new request</a>
                </div> 

                <!--Model-->
                <div class="modal" id="mymodal" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Add a new request</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>


                            <form method="post" action="@Url.Action("addRequest","Home")" enctype="multipart/form-data">
                                <div class="modal-body">
                                    <!-- User Name -->
                                    <div class="form-group">
                                        <label for="userName" class="form-label">Name</label>
                                        <input type="text" name="Name" class="form-control" placeholder="Enter user name" required>
                                    </div>
                                    <!-- Identity, or Country -->
                                    <div class="form-group">
                                        <label for="userIdentity" class="form-label">Identity</label>
                                        <select class="selectpicker countrypicker form-control" data-default="PK"></select>
                                    </div>
                                    <!-- Job Name -->
                                    <div class="form-group">
                                        <label for="userJobName" class="form-label">Job Name</label>
                                        <input type="text" name="Position" class="form-control" placeholder="Enter job name" required>
                                    </div>
                                    <!-- DOB -->
                                    <div class="form-group">
                                        <label class="form-label" for="DateOfBirth">Date of Birth</label>
                                        <input type="date" name="DateOfBirth" class="form-control" required />
                                    </div>
                                    <!-- Profile Picture -->
                                    <div class="form-group">
                                        <label class="form-label" for="ImageData">Profile Picture</label>
                                        <input type="file" name="UserImage" id="ImageData" class="form-control" onchange="fileCheck(this);" required />
                                    </div>
                                    <!-- Status as pending by default -->
                                    <input type="hidden" name="Status" value="Pending" />
                                    <!-- Date Applied -->
                                    <input type="hidden" name="DateApplied" value="@DateTime.Now" />
                                </div>


                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Add</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                                </form>


      
                        </div>
                    </div>
                </div>

                <table class="table">
                    <thead class="thead-dark" style="background-color: #1D8EA1; color: white;">
                        <tr>
                            <th scope="col">Sr#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Date Applied</th>
                            <th scope="col">Position</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int sno=1;}
                        @foreach(var req in Model)
                        {
                            <tr>
                                <th scope="row">@sno</th>
                                <td>@req.Name</td>
                                <td>@req.DateApplied</td>
                                <td>@req.Position</td>
                                <td>
                                    <button class="btn btn-warning me-3" style="padding: 5px 20px; font-size: 18px;">Update</button>
                                    <button class="btn btn-danger" style="padding: 5px 20px; font-size: 18px;">Delete</button>

                                </td>
                            </tr>
                            sno++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<script>
    var myModal = document.getElementById('myModal')
    var myInput = document.getElementById('myInput')

    myModal.addEventListener('shown.bs.modal', function () {
        myInput.focus()
    })
</script>